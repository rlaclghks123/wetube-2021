extends base

block content 
    div#videoContainer
        video(src="/"+video.fileUrl, width="500", height="500")
        div 
            button#play Play 
            button#mute Mute 
            input(type="range",step=0.1, value=0.5, min=0, max=1)#volmun 
            div
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            div
                input(type="range",step=1,value="0", min=0)#timeLine 
            div
                button#fullScreen Full Screen    
        
    //-
        div
            p=video.description
            small=video.createdAt
            div 
                small Upload by 
                    a(href=`/users/${video.owner._id}`)=video.owner.name
                
        if String(video.owner._id)===loggedInUser._id
            a(href=`${video.id}/edit`) Edit 
            br
            a(href=`${video.id}/delete`) Delete
block scripts 
    script(src="/static/js/videoPlayer.js")    