extends base
include mixins/video

block content 
    form.search__form
        input(name="keyword", type="text", placeholder="Search", required)
        label(for="search")
        input(type="submit", id="search" value="🔍") 

    div.video__grid
        each video in videos   
            +video(video) 
        else 
            span.empty__message Not Found video    