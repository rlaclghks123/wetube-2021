DOCTYPE 
    html(lang="ko") 
        head 
            title #{pageTitle} | #{siteName} 
            link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        body 
            header
                h1=pageTitle
                nav 
                    ul
                        li
                            a(href="/") Home 
                        li 
                            a(href="/search") Search
                               
                        if !loggedIn    
                            li 
                                a(href="/join") Join  
                            li 
                                a(href="/login") Login    
                            li  
                                a(href="videos/upload") Upload          
                        else 
                            li 
                                a(href="/users/logout") Logout    
                            li 
                                span Welcome #{loggedInUser.username}             
                            li 
                                a(href="/users/edit-profile") Edit Profile        
                                
                            
            main 
                block content    
        include partials/footer