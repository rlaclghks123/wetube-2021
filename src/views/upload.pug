extends base


block content 
    div.upload__container 
        div.upload__video
            video#preview
        div.upload__btn
            button#actionBtn Record
        if errorMessage
            span=errorMessage
        form(method="POST",enctype="multipart/form-data")
            lable(for="video") Video File
            input(type="file",accept="video/*" required, id="video", name="video")
            lable(for="thumb") Thumb File
            input(type="file",accept="image/*" required, id="thumb", name="thumb")
            input(name="title",placeholder="Title", type="text",required)
            input(name="description",placeholder="Description", type="text",required)
            input(name="hashtags",placeholder="Hashtags, plz split with comma", type="text",required)
            input(type="submit", value="Upload Video")        
block scripts     
        script(src="/static/js/record.js")